{
    "manifest_version": 2,
    "name": "Scratch Me",
    "description": "Save any Facebook Post to simple JSON form",
    "version": "1.0",
    "homepage_url": "https://github.com/bravelab/scratchme-chrome-plugin",
    "permissions": [
        "activeTab"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Scratch Me"
    },
    "content_scripts": [
        {
            "run_at": "document_end",
            "matches": [
                "https://www.facebook.com/*",
                "http://www.facebook.com/*"
            ],
            "all_frames": true,
            "js": [
                "scripts/jquery-3.4.1.js",
                "scripts/addButtons.js"
            ],
            "css": [
                "css/main.min.css"
            ]
        }
    ]
}