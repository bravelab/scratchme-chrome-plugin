{
    "manifest_version": 2,
    "name": "Scratch Me",
    "description": "Save any Facebook Post to simple JSON form",
    "version": "1.0",
    "homepage_url": "https://github.com/bravelab/scratchme-chrome-plugin",
    "permissions": [
        "activeTab"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Scratch Me"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "all_frames": true,
            "js": [
                "addButton.js"
            ]
        }
    ]
}